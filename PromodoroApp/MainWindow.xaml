<Window x:Class="PromodoroApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PromodoroApp"
        xmlns:userControls="clr-namespace:PromodoroApp.View.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400" Background="#222222">
    <Grid>
        <!--<TextBlock Name="txtTime" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="38">Place Holder</TextBlock>-->
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <!-- Menu Bar -->
        <Rectangle Grid.Row="0" Fill="LightGray"></Rectangle>
        
        <!-- Content -->
        <Grid Grid.Row="1">
            <userControls:TimerUserControl Grid.Row="0"/>
        </Grid>
    </Grid>
</Window>
