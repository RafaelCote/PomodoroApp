<UserControl x:Class="PromodoroApp.View.UserControls.TimerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PromodoroApp.View.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Name="tbTimer" Text="0:00" FontSize="96" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.Column="1"></TextBlock>
        <Button Name="btnLess" Grid.Row="0" Grid.Column="0">
            <Image Source="../../Data/Up_Arrow.png"></Image>
        </Button>
        <Button Name="btnMore" Grid.Row="0" Grid.Column="2">
            <Image Source="../../Data/Up_Arrow.png"></Image>
        </Button>
    </Grid>
</UserControl>
